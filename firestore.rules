rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Patients and their subcollections
    match /patients/{patientId} {
      // Helper function to check access
      function isSuperAdmin() {
        return request.auth != null && request.auth.token.email == 'superadmin@jensapp.no';
      }

      function hasAccess() {
        return isSuperAdmin() || (request.auth != null && (
          resource.data.ownerId == request.auth.uid ||
          (resource.data.allowedEmails != null && request.auth.token.email in resource.data.allowedEmails)
        ));
      }
      
      allow read: if hasAccess();
      allow create: if request.auth != null && 
                       (request.resource.data.ownerId == request.auth.uid || isSuperAdmin()) &&
                       (request.resource.data.allowedEmails == null || request.resource.data.allowedEmails.hasAll([request.auth.token.email]) || isSuperAdmin());
      allow update, delete: if hasAccess();
      
      // Access Requests
      match /access_requests/{requestId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (
            isSuperAdmin() ||
            get(/databases/$(database)/documents/patients/$(patientId)).data.ownerId == request.auth.uid ||
            resource.data.userId == request.auth.uid
        );
        allow update: if request.auth != null && (
            isSuperAdmin() ||
            get(/databases/$(database)/documents/patients/$(patientId)).data.ownerId == request.auth.uid
        );
        allow delete: if request.auth != null && (
            isSuperAdmin() ||
            get(/databases/$(database)/documents/patients/$(patientId)).data.ownerId == request.auth.uid
        );
      }

      // Subcollections (logs, reminders, checklist, etc.)
      match /{subcollection=**} {
         allow read, write: if request.auth != null && (
            isSuperAdmin() ||
            get(/databases/$(database)/documents/patients/$(patientId)).data.ownerId == request.auth.uid ||
            (get(/databases/$(database)/documents/patients/$(patientId)).data.allowedEmails != null && 
             request.auth.token.email in get(/databases/$(database)/documents/patients/$(patientId)).data.allowedEmails)
         );
      }
    }

    // Legacy / Root collections
    // Kept open for backward compatibility during migration.
    // Should be locked down after all users migrate.
    match /logs/{docId} { allow read, write: if request.auth != null; }
    match /reminders/{docId} { allow read, write: if request.auth != null; }
    match /checklist/{docId} { allow read, write: if request.auth != null; }
    match /customPlans/{docId} { allow read, write: if request.auth != null; }
    match /customMedicines/{docId} { allow read, write: if request.auth != null; }
    match /timers/{docId} { allow read, write: if request.auth != null; }
  }
}
